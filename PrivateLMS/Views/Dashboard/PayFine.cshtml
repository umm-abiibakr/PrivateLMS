@model PrivateLMS.ViewModels.PayFineViewModel
@{
    ViewData["Title"] = "Pay Fine";
}

<div class="container">
    <h2 class="text-center mb-4">Pay Fine</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Fine Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Book Title</dt>
                        <dd class="col-sm-8">@Model.BookTitle</dd>
                        <dt class="col-sm-4">Loaner Name</dt>
                        <dd class="col-sm-8">@Model.LoanerName</dd>
                        <dt class="col-sm-4">Amount</dt>
                        <dd class="col-sm-8">NGN @Model.Amount.ToString("F2")</dd>
                        <dt class="col-sm-4">Issued Date</dt>
                        <dd class="col-sm-8">@Model.IssuedDate.ToString("g")</dd>
                    </dl>
                    <form asp-action="PayFine" method="post">
                        <input type="hidden" asp-for="FineId" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-warning">Confirm Payment</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>