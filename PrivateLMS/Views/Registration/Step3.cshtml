@model PrivateLMS.ViewModels.Step3ViewModel
@{
    ViewData["Title"] = "Step 3: Contact Information";
}

<div class="container mt-5" style="font-family: 'Cormorant Garamond', serif;">
    <h2 class="text-center mb-4">Step 3: Contact Information</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4" style="background-color: #fffaf3;">
                <div class="card-body p-4">
                    <form asp-action="Step3" asp-controller="Registration" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                            <input asp-for="PhoneNumber" class="form-control rounded-3" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address <span class="text-danger">*</span></label>
                            <input asp-for="Address" class="form-control rounded-3" />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="City" class="form-label">City <span class="text-danger">*</span></label>
                            <input asp-for="City" class="form-control rounded-3" />
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="State" class="form-label">State <span class="text-danger">*</span></label>
                            <select asp-for="State" class="form-select rounded-3" asp-items="@(new SelectList(Model.States))">
                                <option value="">Select State</option>
                            </select>
                            <span asp-validation-for="State" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PostalCode" class="form-label">Postal Code <span class="text-danger">*</span></label>
                            <input asp-for="PostalCode" class="form-control rounded-3" />
                            <span asp-validation-for="PostalCode" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Country" class="form-label">Country <span class="text-danger">*</span></label>
                            <select asp-for="Country" class="form-select rounded-3" asp-items="@(new SelectList(Model.Countries))">
                                <option value="">Select Country</option>
                            </select>
                            <span asp-validation-for="Country" class="text-danger small"></span>
                        </div>

                        <div class="text-end mt-4">
                            <a asp-action="Step2" asp-controller="Registration" class="btn btn-outline-secondary rounded-3 me-2">Back</a>
                            <button type="submit" class="btn btn-primary rounded-3">Next</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}