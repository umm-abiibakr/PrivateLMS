@{
    ViewData["Title"] = "Account Created";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm p-4 border-0 rounded-4" style="background-color: #fffaf3; font-family: 'Cormorant Garamond', serif;">
        <h2 class="mb-3 text-success">Almost There!</h2>
        <p class="mb-2">Thank you for registering with <strong>Warathatul Ambiya</strong>.</p>
        <p>We’ve sent a confirmation link to <strong>your email address</strong>.</p>
        <p>Please check your inbox (and spam/junk folder) and click the link to verify your account.</p>
        <p class="text-muted">Once your email is confirmed, your account will be reviewed by an administrator. You'll receive another email when you're approved.</p>
        <div class="mt-4">
            <a asp-controller="Login" asp-action="Index" class="btn btn-primary me-2">Return to Login</a>
        </div>
    </div>
</div>
