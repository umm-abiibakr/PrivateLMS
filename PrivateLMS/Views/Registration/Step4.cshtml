@model PrivateLMS.ViewModels.Step4ViewModel
@{
    ViewData["Title"] = "Step 4: Confirmation";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Step 4: Confirmation & Agreement</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Step4" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-check mb-4">
                            <input asp-for="TermsAccepted" class="form-check-input" type="checkbox" />
                            <label asp-for="TermsAccepted" class="form-check-label">
                                I accept the terms and conditions
                            </label>
                            <span asp-validation-for="TermsAccepted" class="text-danger d-block"></span>
                        </div>

                        <div class="text-end">
                            <a asp-action="Step3" class="btn btn-secondary me-2">Back</a>
                            <button type="submit" class="btn btn-success">Complete Registration</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
