@model PrivateLMS.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mb-4">Login</h2>

<form asp-action="Index" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Login</button>
        <a asp-controller="Registration" asp-action="Step1" class="btn btn-secondary">Register</a>
    </div>
    <div class="text-center mt-3">
        @* <a asp-action="ForgotPassword" class="text-muted me-3">Forgot Password? (Email)</a> *@
        <a asp-action="ResetPassword" class="text-muted">Reset Password </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}