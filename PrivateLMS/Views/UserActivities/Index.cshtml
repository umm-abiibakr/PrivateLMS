@model PagedResultViewModel<UserActivity>

<div class="container mt-5">
    <h2 class="text-center mb-4">User Activity Log</h2>

    <!-- Filter Panel -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="userId" class="form-label">User ID</label>
                        <input type="number" name="userId" id="userId" value="@ViewBag.UserId" class="form-control" placeholder="e.g. 102" />
                    </div>
                    <div class="col-md-4">
                        <label for="actionType" class="form-label">Action Type</label>
                        <select name="actionType" id="actionType" class="form-select">
                            <option value="">All</option>
                            @if (ViewBag.ActionTypes is IEnumerable<string> types)
                            {
                                foreach (var type in types)
                                {
                                    <option value="@type" selected="@(type == (string)ViewBag.ActionType ? "selected" : null)">
                                        @type
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-4 align-self-end text-end">
                        <button type="submit" class="btn btn-primary">Apply Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Activity Log Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>User</th>
                        <th>Action</th>
                        <th>Timestamp</th>
                        <th>Details</th>
                        <th>IP Address</th>
                        <th>Entity</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        foreach (var activity in Model.Items)
                        {
                            <tr>
                                <td>@(activity.User != null ? $"{activity.User.FirstName} {activity.User.LastName}" : "Unknown")</td>
                                <td>@activity.Action</td>
                                <td>@activity.Timestamp.ToString("MMMM dd, yyyy • HH:mm")</td>
                                <td>@activity.Details</td>
                                <td>@(activity.IPAddress ?? "N/A")</td>
                                <td>@(activity.EntityType != null ? $"{activity.EntityType} ID: {activity.EntityId}" : "N/A")</td>
                                <td>@(activity.Status ?? "N/A")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No recorded activities found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="Activity navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="@(Model.CurrentPage - 1)"
                   asp-route-userId="@ViewBag.UserId"
                   asp-route-actionType="@ViewBag.ActionType">Previous</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-userId="@ViewBag.UserId"
                       asp-route-actionType="@ViewBag.ActionType">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index"
                   asp-route-pageNumber="@(Model.CurrentPage + 1)"
                   asp-route-userId="@ViewBag.UserId"
                   asp-route-actionType="@ViewBag.ActionType">Next</a>
            </li>
        </ul>
    </nav>
</div>
