@model PrivateLMS.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <!-- Overdue Loan Notifications -->
    @if (User.Identity.IsAuthenticated && Model.OverdueLoans.Any())
    {
        <section class="mb-5">
            <h2 class="mb-4 text-danger">Overdue Loans</h2>
            <div class="alert alert-danger" role="alert">
                <ul class="list-unstyled mb-0">
                    @foreach (var loan in Model.OverdueLoans)
                    {
                        if (loan.DueDate.HasValue)
                        {
                            var daysOverdue = (DateTime.UtcNow - loan.DueDate.Value).Days;
                            <li>
                                <strong>@loan.BookTitle</strong> is overdue by @daysOverdue day@(daysOverdue != 1 ? "s" : "").
                                It was due on @loan.DueDate.Value.ToString("g"). Please return it soon to avoid fines.
                            </li>
                        }
                    }
                </ul>
            </div>
        </section>
    }

    <!-- Welcome Section -->
    <div class="text-center my-5">
        <h1>Welcome to Warathatul Ambiya</h1>
        <p class="lead">Discover a wide range of books, borrow your favorites, and share your thoughts with the community.</p>
    </div>

    <!-- New Books Section -->
    <section class="mb-5">
        <h2 class="mb-4">New Books</h2>
        @if (!Model.NewBooks.Any())
        {
            <p class="text-center">No new books available at the moment.</p>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var book in Model.NewBooks)
                {
                    <div class="col">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(book.CoverImagePath))
                            {
                                <img src="@book.CoverImagePath" class="card-img-top" alt="@book.Title Cover" style="height: 200px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <span>No Cover</span>
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">
                                    @(book.Description?.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description ?? "No description available")
                                </p>
                            </div>
                            <div class="card-footer text-center">
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookId" class="btn btn-info btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>

    <!-- Popular Books Section -->
    <section class="mb-5">
        <h2 class="mb-4">Popular Books</h2>
        @if (!Model.PopularBooks.Any())
        {
            <p class="text-center">No popular books available at the moment.</p>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var book in Model.PopularBooks)
                {
                    <div class="col">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(book.CoverImagePath))
                            {
                                <img src="@book.CoverImagePath" class="card-img-top" alt="@book.Title Cover" style="height: 200px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <span>No Cover</span>
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">
                                    @(book.Description?.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description ?? "No description available")
                                </p>
                            </div>
                            <div class="card-footer text-center">
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookId" class="btn btn-info btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>

    <!-- Book Reviews Section -->
    <section class="mb-5">
        <h2 class="mb-4">Recent Book Reviews</h2>
        @if (!Model.RecentReviews.Any())
        {
            <p class="text-center">No reviews available at the moment.</p>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var review in Model.RecentReviews)
                {
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@review.BookTitle</h5>
                                <p class="card-text">
                                    <strong>@review.UserName</strong> rated it @review.Rating stars<br />
                                    <small class="text-muted">Reviewed on @review.RatedOn.ToString("g")</small>
                                </p>
                            </div>
                            <div class="card-footer text-center">
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@review.BookId" class="btn btn-info btn-sm">View Book</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>

    <!-- Recommendations Section -->
    @if (User.Identity.IsAuthenticated && Model.Recommendations.Any())
    {
        <section class="mb-5">
            <h2 class="mb-4">You May Like to Read This</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var book in Model.Recommendations)
                {
                    <div class="col">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(book.CoverImagePath))
                            {
                                <img src="@book.CoverImagePath" class="card-img-top" alt="@book.Title Cover" style="height: 200px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <span>No Cover</span>
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">
                                    @(book.Description?.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description ?? "No description available")
                                </p>
                            </div>
                            <div class="card-footer text-center">
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookId" class="btn btn-info btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
</div>