@model PrivateLMS.ViewModels.LanguageViewModel
@{
    ViewData["Title"] = "Language Details";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4">Language Details</h2>

    <div class="card shadow-sm p-4 rounded-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-end fw-semibold">Language Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 text-end fw-semibold">Number of Books</dt>
                <dd class="col-sm-8">@Model.BookCount</dd>

                <dt class="col-sm-4 text-end fw-semibold">Books</dt>
                <dd class="col-sm-8">
                    @if (Model.Books != null && Model.Books.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var book in Model.Books)
                            {
                                <li>@book</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">No books in this language.</span>
                    }
                </dd>
            </dl>

            <div class="text-center mt-4">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.LanguageId" class="btn btn-warning btn-md me-2 rounded-3" aria-label="Edit language @Model.Name">
                        Edit
                    </a>
                }
                <a asp-action="Index" class="btn btn-primary btn-md rounded-3" aria-label="Back to languages list">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
