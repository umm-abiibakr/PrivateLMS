@model PrivateLMS.ViewModels.ReturnViewModel
@{
    ViewData["Title"] = "Return Book";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Return Book: <span class="text-primary">@Model.BookTitle</span></h2>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="alert alert-warning text-center">
                        Are you sure you want to return this book? Once confirmed, the return will be finalized.
                    </p>

                    <dl class="row">
                        <dt class="col-sm-5 text-end">Loaner Name</dt>
                        <dd class="col-sm-7">@Model.LoanerName</dd>

                        <dt class="col-sm-5 text-end">Loan Date</dt>
                        <dd class="col-sm-7">@(Model.LoanDate?.ToShortDateString() ?? "N/A")</dd>

                        <dt class="col-sm-5 text-end">Due Date</dt>
                        <dd class="col-sm-7">@(Model.DueDate?.ToShortDateString() ?? "N/A")</dd>
                    </dl>

                    <form asp-action="Return" method="post">
                        <input type="hidden" asp-for="LoanRecordId" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-success me-2">Confirm Return</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to Loans</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
