@model PrivateLMS.ViewModels.ReturnViewModel
@{
    ViewData["Title"] = "Return Book";
}

<h2>Return Book: @Model.BookTitle</h2>

<p>Are you sure you want to return this book?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Loaner Name</dt>
        <dd class="col-sm-10">@Model.LoanerName</dd>
        <dt class="col-sm-2">Loan Date</dt>
        <dd class="col-sm-10">@(Model.LoanDate?.ToShortDateString() ?? "N/A")</dd>
        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@(Model.DueDate?.ToShortDateString() ?? "N/A")</dd>
    </dl>
</div>

<form asp-action="Return" method="post">
    <input type="hidden" asp-for="LoanRecordId" />
    <button type="submit" class="btn btn-primary">Confirm Return</button>
    <a asp-action="MyLoans" class="btn btn-secondary">Back to My Loans</a>
</form>