@model PrivateLMS.ViewModels.ReturnViewModel
@{
    ViewData["Title"] = "Return Book";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Return Book: @Model.BookTitle</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <p class="text-center">Are you sure you want to return this book?</p>

                    <dl class="row">
                        <dt class="col-sm-4 text-end">Loaner Name</dt>
                        <dd class="col-sm-8">@Model.LoanerName</dd>
                        <dt class="col-sm-4 text-end">Loan Date</dt>
                        <dd class="col-sm-8">@(Model.LoanDate?.ToShortDateString() ?? "N/A")</dd>
                        <dt class="col-sm-4 text-end">Due Date</dt>
                        <dd class="col-sm-8">@(Model.DueDate?.ToShortDateString() ?? "N/A")</dd>
                    </dl>

                    <form asp-action="Return" method="post">
                        <input type="hidden" asp-for="LoanRecordId" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Confirm Return</button>
                            <a asp-action="MyLoans" class="btn btn-secondary">Back to My Loans</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>