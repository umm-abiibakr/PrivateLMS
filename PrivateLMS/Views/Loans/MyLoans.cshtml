@model IEnumerable<PrivateLMS.ViewModels.LoanViewModel>
@{
    ViewData["Title"] = "My Loans";
}

<h2 class="text-center mb-4">My Loans</h2>

@if (!Model.Any())
{
    <p class="text-center">You have no active loans.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Loan Date</th>
                <th>Due Date</th>
                <th>Return Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model)
            {
                <tr>
                    <td>@loan.BookTitle</td>
                    <td>@loan.LoanDate.ToShortDateString()</td>
                    <td>@(loan.DueDate?.ToShortDateString() ?? "N/A")</td>
                    <td>
                        @if (loan.ReturnDate.HasValue)
                        {
                            @loan.ReturnDate.Value.ToShortDateString()
                        }
                        else
                        {
                            <span class="badge bg-warning">Not Returned</span>
                        }
                    </td>
                    <td>
                        @if (!loan.ReturnDate.HasValue)
                        {
                            <a asp-action="Return" asp-route-loanRecordId="@loan.LoanRecordId" class="btn btn-primary btn-sm">Return</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="text-end">
    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>
</div>