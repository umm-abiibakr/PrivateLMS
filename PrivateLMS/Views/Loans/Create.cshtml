@model PrivateLMS.ViewModels.LoanViewModel
@{
    ViewData["Title"] = "Request a Loan";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Loan Book: <span class="text-primary">@Model.BookTitle</span></h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="BookId" />
                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3">
                            <label asp-for="LoanerName" class="form-label">Loaner Name</label>
                            <input asp-for="LoanerName" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label">Due Date</label>
                            <input asp-for="DueDate" class="form-control" type="date" readonly />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success me-2">Confirm Loan</button>
                            <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
