@model PrivateLMS.ViewModels.LoanViewModel
@{
    ViewData["Title"] = "Loan Book";
}

<h2>Loan Book: @Model.BookTitle</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="BookId" />
    <input type="hidden" asp-for="UserId" />
    <div class="mb-3">
        <label asp-for="LoanerName" class="form-label">Loaner Name</label>
        <input asp-for="LoanerName" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="DueDate" class="form-label">Due Date</label>
        <input asp-for="DueDate" class="form-control" type="date" readonly />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Confirm Loan</button>
    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}