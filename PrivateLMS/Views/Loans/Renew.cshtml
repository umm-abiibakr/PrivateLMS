@model PrivateLMS.ViewModels.LoanViewModel
@{
    ViewData["Title"] = "Renew Loan";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Renew Loan for <span class="text-primary">@Model.BookTitle</span></h2>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="alert alert-warning text-center">
                        Are you sure you want to renew this loan? This will extend the due date by <strong>7 days</strong>. Note: Renewal can only be done once.
                    </p>

                    <dl class="row">
                        <dt class="col-sm-5 text-end">Book Title</dt>
                        <dd class="col-sm-7">@Model.BookTitle</dd>

                        <dt class="col-sm-5 text-end">Loaner Name</dt>
                        <dd class="col-sm-7">@Model.LoanerName</dd>

                        <dt class="col-sm-5 text-end">Loan Date</dt>
                        <dd class="col-sm-7">@Model.LoanDate.ToShortDateString()</dd>

                        <dt class="col-sm-5 text-end">Current Due Date</dt>
                        <dd class="col-sm-7">@(Model.DueDate?.ToShortDateString() ?? "N/A")</dd>

                        <dt class="col-sm-5 text-end">New Due Date</dt>
                        <dd class="col-sm-7">@(Model.DueDate?.AddDays(7).ToShortDateString() ?? "N/A")</dd>
                    </dl>

                    <form asp-action="Renew" method="post">
                        <input type="hidden" asp-for="LoanRecordId" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-success me-2">Confirm Renewal</button>
                            <a asp-action="MyLoans" class="btn btn-secondary">Back to My Loans</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
