@model PrivateLMS.ViewModels.LoanViewModel
@{
    ViewData["Title"] = "Renew Loan";
}

<h2>Renew Loan: @Model.BookTitle</h2>

<p>Are you sure you want to renew this loan? It will extend the due date by 7 days. This is a one-time renewal.</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Book Title</dt>
        <dd class="col-sm-10">@Model.BookTitle</dd>
        <dt class="col-sm-2">Loaner Name</dt>
        <dd class="col-sm-10">@Model.LoanerName</dd>
        <dt class="col-sm-2">Loan Date</dt>
        <dd class="col-sm-10">@Model.LoanDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Current Due Date</dt>
        <dd class="col-sm-10">@(Model.DueDate?.ToShortDateString() ?? "N/A")</dd>
        <dt class="col-sm-2">New Due Date</dt>
        <dd class="col-sm-10">@(Model.DueDate?.AddDays(7).ToShortDateString() ?? "N/A")</dd>
    </dl>
</div>

<form asp-action="Renew" method="post">
    <input type="hidden" asp-for="LoanRecordId" />
    <button type="submit" class="btn btn-primary">Confirm Renewal</button>
    <a asp-action="MyLoans" class="btn btn-secondary">Back to My Loans</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}