@model PrivateLMS.ViewModels.PayFineViewModel
@{
    ViewData["Title"] = "Pay Fine";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Pay Fine for <em>@Model.BookTitle</em></h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="text-center mb-4">Please confirm payment of the following fine:</p>

                    <dl class="row mb-4">
                        <dt class="col-sm-5 text-end">Book Title</dt>
                        <dd class="col-sm-7">@Model.BookTitle</dd>

                        <dt class="col-sm-5 text-end">Loaner Name</dt>
                        <dd class="col-sm-7">@Model.LoanerName</dd>

                        <dt class="col-sm-5 text-end">Fine Amount</dt>
                        <dd class="col-sm-7">@Model.Amount.ToString("C", new System.Globalization.CultureInfo("en-NG"))</dd>

                        <dt class="col-sm-5 text-end">Issued Date</dt>
                        <dd class="col-sm-7">@Model.IssuedDate.ToShortDateString()</dd>
                    </dl>

                    <form asp-action="Pay" method="post">
                        <input type="hidden" asp-for="FineId" />
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-success">Confirm Payment</button>
                            <a asp-action="MyFines" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
