@model PrivateLMS.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4">Create Category</h2>
    <p class="text-center text-muted mb-4">Add a new category to organize books.</p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4 rounded-4">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CategoryName" class="form-label">Category Name</label>
                            <input asp-for="CategoryName" class="form-control" placeholder="e.g. Islamic Studies" aria-describedby="categoryNameValidation" />
                            <span asp-validation-for="CategoryName" class="text-danger" id="categoryNameValidation"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-md rounded-3" aria-label="Save category">Save</button>
                            <a asp-action="Index" class="btn btn-secondary btn-md rounded-3 ms-2" aria-label="Back to categories list">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}