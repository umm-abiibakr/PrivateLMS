@model PrivateLMS.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Category Details</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 text-end">Category Name</dt>
                        <dd class="col-sm-8">@Model.CategoryName</dd>
                        <dt class="col-sm-4 text-end">Number of Books</dt>
                        <dd class="col-sm-8">@Model.BookCount</dd>
                        <dt class="col-sm-4 text-end">Books</dt>
                        <dd class="col-sm-8">
                            @if (Model.Books != null && Model.Books.Any())
                            {
                                <ul class="list-unstyled">
                                    @foreach (var book in Model.Books)
                                    {
                                        <li>@book</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p>No books in this category.</p>
                            }
                        </dd>
                    </dl>

                    <div class="text-center">
                        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning me-2">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>