@model PrivateLMS.Models.CategoryViewModel

<h2>Delete Category</h2>

<p>Are you sure you want to delete this category?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Publisher Name</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>
        <dt class="col-sm-2">Book Count</dt>
        <dd class="col-sm-10">@Model.BookCount</dd>

        <dt class="col-sm-2">Books</dt>
        <dd class="col-sm-10">
            @if (Model.Books.Any())
            {
                <ul>
                    @foreach (var book in Model.Books)
                    {
                        <li>@book</li>
                    }
                </ul>
            }
            else
            {
                <p>No books in this category.</p>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryId" />
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>