@model IEnumerable<PrivateLMS.ViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Categories</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Add Category</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Number of Books</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@category.BookCount</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>
    </div>
</div>