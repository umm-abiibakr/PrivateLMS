@model IEnumerable<PrivateLMS.ViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<h2 class="text-center mb-4">Categories</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Add Category</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Number of Books</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>@category.BookCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>