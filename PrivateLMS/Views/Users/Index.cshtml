@model IEnumerable<PrivateLMS.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Users";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Users</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Add User</a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center">No users found.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@(user.IsLockedOut ? "Banned" : "Active")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm me-1">Delete</a>
                            @if (user.IsLockedOut)
                            {
                                <button type="button" class="btn btn-success btn-sm me-1" data-bs-toggle="modal" data-bs-target="#unbanModal-@user.Id">
                                    Unban
                                </button>
                                <!-- Unban Modal -->
                                <div class="modal fade" id="unbanModal-@user.Id" tabindex="-1" aria-labelledby="unbanModalLabel-@user.Id" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="unbanModalLabel-@user.Id">Unban @user.UserName</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to unban @user.UserName?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="Unban" asp-route-id="@user.Id" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-success">Unban</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger btn-sm me-1" data-bs-toggle="modal" data-bs-target="#banModal-@user.Id">
                                    Ban
                                </button>
                                <!-- Ban Modal -->
                                <div class="modal fade" id="banModal-@user.Id" tabindex="-1" aria-labelledby="banModalLabel-@user.Id" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="banModalLabel-@user.Id">Ban @user.UserName</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form asp-action="Ban" asp-route-id="@user.Id" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <div class="mb-3">
                                                        <label for="duration-@user.Id" class="form-label">Ban Duration:</label>
                                                        <select name="duration" id="duration-@user.Id" class="form-select">
                                                            <option value="1day">1 Day</option>
                                                            <option value="1week">1 Week</option>
                                                            <option value="1month">1 Month</option>
                                                            <option value="permanent" selected>Permanent</option>
                                                        </select>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="banReason-@user.Id" class="form-label">Ban Reason:</label>
                                                        <input type="text" name="banReason" id="banReason-@user.Id" class="form-control" placeholder="Enter ban reason" required />
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger">Ban</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-end mt-3">
        <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>
    </div>
</div>