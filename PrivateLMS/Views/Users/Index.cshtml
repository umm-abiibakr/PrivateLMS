@model IEnumerable<PrivateLMS.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Users";
}

<h2 class="text-center mb-4">Users</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Add User</a>
</div>

@if (!Model.Any())
{
    <p class="text-center">No users found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@(user.IsLockedOut ? "Banned" : "Active")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                        @if (user.IsLockedOut)
                        {
                            <form asp-action="Unban" asp-route-id="@user.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to unban @user.UserName?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success btn-sm">Unban</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Ban" asp-route-id="@user.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to ban @user.UserName?');">
                                @Html.AntiForgeryToken()
                                <select name="duration" class="form-select form-select-sm d-inline-block w-auto">
                                    <option value="1day">1 Day</option>
                                    <option value="1week">1 Week</option>
                                    <option value="1month">1 Month</option>
                                    <option value="permanent" selected>Permanent</option>
                                </select>
                                <button type="submit" class="btn btn-danger btn-sm">Ban</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="text-end">
    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>
</div>