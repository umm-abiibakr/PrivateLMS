@model PrivateLMS.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <h2 class="text-center mb-5">My Profile: @Model.UserName</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Profile" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

                        <div class="text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                            {
                                <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="img-fluid rounded-circle mb-3" />
                                <p class="text-muted">Replace current profile picture:</p>
                            }
                            else
                            {
                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded-circle mb-3">
                                    <span>No Picture</span>
                                </div>
                                <p class="text-muted">Upload a profile picture:</p>
                            }
                            <input asp-for="ProfilePicture" type="file" class="form-control mx-auto" accept="image/*" style="max-width: 300px;" />
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control" readonly />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="State" class="form-label"></label>
                            <input asp-for="State" class="form-control" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="PostalCode" class="form-label"></label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Country" class="form-label"></label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary me-3" asp-controller="Dashboard" asp-action="Index">Update Profile</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}