@model PrivateLMS.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete User: @Model.UserName</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <p class="mb-4 text-danger fw-semibold">
                        Are you sure you want to delete this user? This action cannot be undone.
                    </p>

                    <dl class="row text-start">
                        <dt class="col-sm-5 text-end fw-bold">Username:</dt>
                        <dd class="col-sm-7">@Model.UserName</dd>
                        <dt class="col-sm-5 text-end fw-bold">Email:</dt>
                        <dd class="col-sm-7">@Model.Email</dd>
                        <dt class="col-sm-5 text-end fw-bold">First Name:</dt>
                        <dd class="col-sm-7">@Model.FirstName</dd>
                        <dt class="col-sm-5 text-end fw-bold">Last Name:</dt>
                        <dd class="col-sm-7">@Model.LastName</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4 d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger px-4">Delete</button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
