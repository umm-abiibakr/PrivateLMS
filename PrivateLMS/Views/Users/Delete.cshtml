@model PrivateLMS.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Delete User";
}

<h2 class="text-center mb-4">Delete User: @Model.UserName</h2>

<p class="text-center">Are you sure you want to delete this user? This action cannot be undone.</p>

<div>
    <dl class="row">
        <dt class="col-sm-3">Username</dt>
        <dd class="col-sm-9">@Model.UserName</dd>
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>
        <dt class="col-sm-3">Last Name</dt>
        <dd class="col-sm-9">@Model.LastName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    @Html.AntiForgeryToken()
    <div class="text-center">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>