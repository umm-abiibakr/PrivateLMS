@model PrivateLMS.ViewModels.LoanViewModel

<h2>Loan Book: @Model.BookTitle</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="BookId" />
    <div class="mb-3">
        <label asp-for="LoanerName" class="form-label"></label>
        <input asp-for="LoanerName" class="form-control" />
        <span asp-validation-for="LoanerName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LoanerEmail" class="form-label"></label>
        <input asp-for="LoanerEmail" class="form-control" />
        <span asp-validation-for="LoanerEmail" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Loan Book</button>
    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>