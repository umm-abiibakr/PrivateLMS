@model IEnumerable<PrivateLMS.ViewModels.LoanViewModel>

<h2>Loan Records</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Loaner Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model)
        {
            <tr>
                <td>@loan.BookTitle</td>
                <td>@loan.LoanerName</td>
                <td>@loan.LoanerEmail</td>
                <td>@loan.Phone</td>
                <td>
                    <a asp-action="Return" asp-route-loanRecordId="@loan.BookId" class="btn btn-primary">Return</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>