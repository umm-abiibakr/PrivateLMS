@model PrivateLMS.ViewModels.BookViewModel
@{
    ViewData["Title"] = "Create Book";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Create Book</h2>
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Title" class="form-label">Title</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="AuthorId" class="form-label">Author</label>
                                <select asp-for="AuthorId" class="form-select" asp-items="@(new SelectList(Model.AvailableAuthors, "AuthorId", "Name"))">
                                    <option value="">Select an Author</option>
                                </select>
                                <span asp-validation-for="AuthorId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ISBN" class="form-label">ISBN</label>
                                <input asp-for="ISBN" class="form-control" />
                                <span asp-validation-for="ISBN" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Language" class="form-label">Language</label>
                                <input asp-for="Language" class="form-control" />
                                <span asp-validation-for="Language" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PublishedDate" class="form-label">Published Date</label>
                                <input asp-for="PublishedDate" type="date" class="form-control" />
                                <span asp-validation-for="PublishedDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="AvailableCopies" class="form-label">Available Copies</label>
                                <input asp-for="AvailableCopies" type="number" min="0" class="form-control" />
                                <span asp-validation-for="AvailableCopies" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PublisherId" class="form-label">Publisher</label>
                                <select asp-for="PublisherId" class="form-select" asp-items="@(new SelectList(Model.AvailablePublishers, "PublisherId", "PublisherName"))">
                                    <option value="">Select a Publisher (optional)</option>
                                </select>
                                <span asp-validation-for="PublisherId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SelectedCategoryIds" class="form-label">Categories</label>
                                <select asp-for="SelectedCategoryIds" multiple class="form-select" asp-items="@(new SelectList(Model.AvailableCategories, "CategoryId", "CategoryName"))"></select>
                                <span asp-validation-for="SelectedCategoryIds" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CoverImage" class="form-label">Book Cover</label>
                                <input asp-for="CoverImage" type="file" class="form-control" accept="image/*" />
                                <span asp-validation-for="CoverImage" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 d-flex align-items-center mt-4">
                                <div class="form-check">
                                    <input asp-for="IsAvailable" class="form-check-input" />
                                    <label asp-for="IsAvailable" class="form-check-label">Available</label>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success me-2">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

