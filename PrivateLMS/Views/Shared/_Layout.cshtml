<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrivateLMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.tiny.cloud/1/i1mlfgm6u3fgh6hg9a6kpweksadil4bxw6rxmz19gjj4mgga/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>


</head>
<body>
    <header>
        @inject IHttpContextAccessor HttpContextAccessor

        @{
            var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
        }

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Warathatul Ambiya</a>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="managementDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Management
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="managementDropdown">
                        <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Books</a></li>
                        <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Categories</a></li>
                        <li><a class="dropdown-item" asp-controller="Loans" asp-action="Index">Loans</a></li>
                        <li><a class="dropdown-item" asp-controller="Publishers" asp-action="Index">Publishers</a></li>
                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Users</a></li>
                    </ul>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <li class="nav-item">
                                <span class="nav-link">Welcome, @username</span>
                            </li>
                            <li class="nav-item">
                                @await Component.InvokeAsync("LoanCart")
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Loans" asp-action="MyLoans">My Loans</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Registration" asp-action="Step1">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            © 2025 - PrivateLMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>