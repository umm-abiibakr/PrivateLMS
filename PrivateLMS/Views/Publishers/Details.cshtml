@model PrivateLMS.ViewModels.PublisherViewModel
@{
    ViewData["Title"] = "Publisher Details";
}

<h2>Publisher Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Logo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.LogoImagePath))
            {
                <img src="@Model.LogoImagePath" alt="@Model.PublisherName Logo" style="max-width: 100px;" />
            }
            else
            {
                <span>No Logo</span>
            }
        </dd>
        <dt class="col-sm-2">Publisher Name</dt>
        <dd class="col-sm-10">@Model.PublisherName</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>
</div>

<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.PublisherId" class="btn btn-warning">Edit</a>
    }
    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>
</div>