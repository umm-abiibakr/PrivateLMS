@model PrivateLMS.ViewModels.PublisherViewModel
@{
    ViewData["Title"] = "Publisher Details";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4">Publisher Details</h2>

    <div class="card shadow-sm p-4 rounded-4">
        <div class="card-body text-center">
            <div class="mb-4">
                @if (!string.IsNullOrEmpty(Model.LogoImagePath))
                {
                    <img src="@Model.LogoImagePath" alt="@Model.PublisherName Logo" class="img-fluid publisher-logo" />
                }
                else
                {
                    <div class="text-muted">No Logo Available</div>
                }
            </div>

            <dl class="row justify-content-center text-start">
                <dt class="col-sm-4 text-end fw-semibold">Publisher Name</dt>
                <dd class="col-sm-8">@Model.PublisherName</dd>

                <dt class="col-sm-4 text-end fw-semibold">Location</dt>
                <dd class="col-sm-8">@Model.Location</dd>
            </dl>

            <div class="text-center mt-4">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.PublisherId" class="btn btn-warning btn-md me-2 rounded-3" aria-label="Edit publisher @Model.PublisherName">
                        Edit
                    </a>
                }
                <a asp-controller="Publishers" asp-action="Index" class="btn btn-secondary btn-md rounded-3" aria-label="Back to publishers list">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>