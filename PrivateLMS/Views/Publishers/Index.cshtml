@model IEnumerable<PrivateLMS.ViewModels.PublisherViewModel>
@{
    ViewData["Title"] = "Publishers";
}

<h2 class="text-center mb-4">Publishers</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Add Publisher</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Logo</th>
            <th>Publisher Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var publisher in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(publisher.LogoImagePath))
                    {
                        <img src="@publisher.LogoImagePath" alt="@publisher.PublisherName Logo" style="max-width: 50px;" />
                    }
                    else
                    {
                        <span>No Logo</span>
                    }
                </td>
                <td>@publisher.PublisherName</td>
                <td>@publisher.Location</td>
                <td>
                    <a asp-action="Details" asp-route-id="@publisher.PublisherId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@publisher.PublisherId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@publisher.PublisherId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>