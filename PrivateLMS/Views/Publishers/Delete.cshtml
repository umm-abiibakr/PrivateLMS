@model PrivateLMS.Models.PublisherViewModel

<h2>Delete Publisher</h2>

<p>Are you sure you want to delete this publisher?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Publisher Name</dt>
        <dd class="col-sm-10">@Model.PublisherName</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PublisherId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>