@model PrivateLMS.ViewModels.PublisherViewModel
@{
    ViewData["Title"] = "Delete Publisher";
}

<h2>Delete Publisher</h2>

<p>Are you sure you want to delete this publisher? This action cannot be undone.</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Logo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.LogoImagePath))
            {
                <img src="@Model.LogoImagePath" alt="@Model.PublisherName Logo" style="max-width: 100px;" />
            }
            else
            {
                <span>No Logo</span>
            }
        </dd>
        <dt class="col-sm-2">Publisher Name</dt>
        <dd class="col-sm-10">@Model.PublisherName</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PublisherId" />
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>