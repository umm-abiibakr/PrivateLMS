@model PrivateLMS.ViewModels.PublisherViewModel
@{
    ViewData["Title"] = "Delete Publisher";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Publisher</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <p class="mb-4">Are you sure you want to delete this publisher? This action cannot be undone.</p>

                    <div class="mb-4">
                        @if (!string.IsNullOrEmpty(Model.LogoImagePath))
                        {
                            <img src="@Model.LogoImagePath" alt="@Model.PublisherName Logo" style="max-width: 100px;" />
                        }
                        else
                        {
                            <span>No Logo</span>
                        }
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4 text-end">Publisher Name</dt>
                        <dd class="col-sm-8">@Model.PublisherName</dd>
                        <dt class="col-sm-4 text-end">Location</dt>
                        <dd class="col-sm-8">@Model.Location</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="PublisherId" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger me-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>