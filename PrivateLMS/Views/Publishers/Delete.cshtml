@model PrivateLMS.ViewModels.PublisherViewModel
@{
    ViewData["Title"] = "Delete Publisher";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-danger">Delete Publisher</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <p class="mb-4 text-danger fw-semibold">Are you sure you want to delete this publisher? This action cannot be undone.</p>

                    <div class="mb-4">
                        @if (!string.IsNullOrEmpty(Model.LogoImagePath))
                        {
                            <img src="@Model.LogoImagePath" alt="@Model.PublisherName Logo" style="max-width: 100px;" class="img-thumbnail" />
                        }
                        else
                        {
                            <div class="text-muted">No Logo</div>
                        }
                    </div>

                    <dl class="row justify-content-center text-start">
                        <dt class="col-sm-4 text-end fw-semibold">Publisher Name</dt>
                        <dd class="col-sm-8">@Model.PublisherName</dd>
                        <dt class="col-sm-4 text-end fw-semibold">Location</dt>
                        <dd class="col-sm-8">@Model.Location</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="PublisherId" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm me-2">
                            <i class="bi bi-trash3-fill me-1"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
