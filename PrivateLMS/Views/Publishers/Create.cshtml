@model PrivateLMS.ViewModels.PublisherViewModel
@{
    ViewData["Title"] = "Create Publisher";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4">Create Publisher</h2>
    <p class="text-center text-muted mb-4">Add a new publisher to the library system.</p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4 rounded-4">
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="PublisherName" class="form-label">Publisher Name</label>
                            <input asp-for="PublisherName" class="form-control" aria-describedby="publisherNameValidation" />
                            <span asp-validation-for="PublisherName" class="text-danger" id="publisherNameValidation"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label">Location</label>
                            <input asp-for="Location" class="form-control" aria-describedby="locationValidation" />
                            <span asp-validation-for="Location" class="text-danger" id="locationValidation"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LogoImage" class="form-label">Publisher Logo</label>
                            <input asp-for="LogoImage" type="file" class="form-control" accept="image/*" aria-describedby="logoImageValidation" />
                            <span asp-validation-for="LogoImage" class="text-danger" id="logoImageValidation"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-md rounded-3" aria-label="Save publisher">Save</button>
                            <a asp-action="Index" class="btn btn-secondary btn-md rounded-3 ms-2" aria-label="Back to publishers list">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
               
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}