@model IEnumerable<PrivateLMS.ViewModels.AuthorViewModel>
@{
    ViewData["Title"] = "Authors";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Authors</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="text-end mb-3">
            <a asp-action="Create" class="btn btn-primary">Add Author</a>
        </div>
    }


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                @if (User.Identity.IsAuthenticated){<th>Number of Books</th>}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.Name</td>
                    @if (User.Identity.IsAuthenticated)
                        {<td>@author.BookCount</td>}
                    <td>
                        <a asp-action="Details" asp-route-id="@author.AuthorId" class="btn btn-info btn-sm me-1">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@author.AuthorId" class="btn btn-warning btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@author.AuthorId" class="btn btn-danger btn-sm">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Back to Books</a>
    </div>
</div>